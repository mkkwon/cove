
<style>

</style>

<div class="container_16 list_project">
<% if @project %>
<div class="grid_11">
   &nbsp; 
</div>
<div class="grid_5">
<%= link_to 'Create a new project', new_project_path %> 
</div>
<div class="clear"></div>
<div class="grid_3">
   &nbsp; 
</div>
<div class="grid_7">
		<h3>Listing projects:</h3>
	</div>
<div class="grid_3">
   &nbsp; 
</div>
<div class="clear"></div>

<% @project.each do | project | %>
   <% if project.user_id == current_user.id %>

<div class="grid_3">
   &nbsp; 
</div>
<div class="grid_3 projectlist_thumb">
	
   &nbsp; <br />
   <div style="height:90px; width: 160px; background-color: gray; text-align: center;">160x90px</div>

   <!-- This will show the first thumbnail of their favorites interval -->
</div>
	<div class="grid_7 projectlist_detail">
      <h2><%= link_to project.name, project %></h2> 
      <p>Owner: <em><strong><%= current_user.email %></strong></em></p>
      <p><%= project.desc %></p>
      <p>Tags: <em>Tags would go here</em></p>
      
   &nbsp; <br />
	</div>
<div class="grid_3">
   &nbsp; 
</div>
<div class="clear"></div>


	<% end %>
<% end %>

<% else %>

<div class="grid_16">
<p>Please log in to access projects.</p>
</div>
<div class="clear"></div>

<% end %>
</div>
